<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="16dp"
    android:id="@+id/rootItem"
    android:background="@color/card_back"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="5dp"
    android:clickable="true">

    <FrameLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="100dp"
       >

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/remove"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|end"
                android:src="@drawable/trash"
                android:background="@drawable/bg_contact_back"
                android:padding="25dp"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/edit"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|start"
                android:background="@drawable/bg_contact_back_edit"
                android:src="@drawable/edit"
                android:padding="25dp"
                app:tint="@color/white" />
        </FrameLayout>
        <LinearLayout
            android:id="@+id/item_for_click"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_contact">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/contactImage"
                    android:layout_width="66dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cowboy"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="start|center"
                android:layout_marginStart="30dp">

                <TextView
                    android:id="@+id/contactFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Maqsudov"
                    android:fontFamily="@font/uzum_medium"
                    android:textColor="@color/color_app_main"
                    android:textSize="18sp"
                    android:justificationMode="inter_word"
                    tools:ignore="TextViewEdits" />

                <TextView
                    android:id="@+id/contactLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Abdulbosit"
                    android:fontFamily="@font/uzum_medium"
                    android:textColor="@color/color_app_main"
                    android:textSize="18sp"
                    android:justificationMode="inter_word"
                    tools:ignore="TextViewEdits" />

                <TextView
                    android:id="@+id/contactNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="+998 97 059 97 30"
                    android:fontFamily="@font/uzum_medium"
                    android:textColor="@color/color_app_main"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>



    </FrameLayout>


</androidx.cardview.widget.CardView>